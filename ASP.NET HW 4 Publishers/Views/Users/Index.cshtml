@model IEnumerable<ASP.NET_HW_4_Publishers.Models.User>
@using ASP.NET_HW_4_Publishers.Models
@{
	ViewBag.Title = "Index";
}

<h2>@HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()</h2>

<p>
	@Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Email)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Password)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.RoleId)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.Email)
		</td>
		<td>
			@{ string password = new String('*', item.Password.Length);}
			@Html.DisplayFor(modelItem => password)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.Name)
		</td>
		<td>
			@Html.DisplayFor(modelItem => RoleRepository.Instance.FindById(item.RoleId).Name)
		</td>
		<td>
			@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
			@Html.ActionLink("Details", "Details", new { id = item.Id }) |
			@Html.ActionLink("Delete", "Delete", new { id = item.Id })
		</td>
	</tr>
	}

</table>
